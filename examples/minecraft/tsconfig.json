{
  "compilerOptions": {
    "incremental": true,
    "target": "es2021",
    "module": "commonjs",
    "lib": ["es2021"],
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "baseUrl": "./ts",
    "rootDir": "./ts",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "experimentalDecorators": true,
    "outDir": "./js",
  },
  "exclude": ["node_modules"]
}
